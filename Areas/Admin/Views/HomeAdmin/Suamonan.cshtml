@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FASTFOOD.Models.MonAn

@{
    ViewData["Title"] = "Suamonan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Suamonan</h1>

<h4>MonAn</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Suamonan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaMonAn" />
            <div class="form-group">
                <label asp-for="TenMonAn" class="control-label"></label>
                <input asp-for="TenMonAn" class="form-control" />
                <span asp-validation-for="TenMonAn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gia" class="control-label"></label>
                <input asp-for="Gia" class="form-control" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaLoaiMonAn" class="control-label"></label>
                <select asp-for="MaLoaiMonAn" class="form-control" asp-items="ViewBag.MaLoaiMonAn"></select>
                <span asp-validation-for="MaLoaiMonAn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnhDaiDien" class="control-label"></label>
                <input asp-for="AnhDaiDien" class="form-control" />
                <span asp-validation-for="AnhDaiDien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DanhMucMonAn">Back to List</a>
</div>

