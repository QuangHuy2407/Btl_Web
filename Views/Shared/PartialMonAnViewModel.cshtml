@model MonAn

<div class="card h-100">
    <img src="@Url.Content("../images/"+ Model.AnhDaiDien)" class="card-img-top" alt="@Model.TenMonAn" style="height: 200px; object-fit: cover;">
    <div class="card-body">
        <h5 class="card-title">@Model.TenMonAn</h5>
        <p class="card-text text-muted description">@Model.MoTa</p>
        <div class="d-flex justify-content-between align-items-center mt-3">
            <span class="price fw-bold text-primary">@Model.Gia.ToString("N0") đ</span>
            <a href="@Url.Action("ChiTietmonan", "Home", new { id = Model.MaMonAn })" 
               class="btn btn-outline-primary btn-sm">
                <i class="fas fa-info-circle me-1"></i>Chi tiết
            </a>
        </div>
    </div>
</div>

<style>
.card {
    border: none;
    background-color: white;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.15);
}

.card-img-top {
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
}

.card-body {
    padding: 1.25rem;
}

.card-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #2d3436;
}

.description {
    font-size: 0.9rem;
    margin-bottom: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

.price {
    font-size: 1.1rem;
    color: #0984e3;
}

.btn-outline-primary {
    border-radius: 6px;
    padding: 0.375rem 0.75rem;
}

.btn-outline-primary:hover {
    color: white;
}

@@media (max-width: 768px) {
    .card-img-top {
        height: 180px !important;
    }
}
</style>
