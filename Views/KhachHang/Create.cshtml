@using FASTFOOD.Models.ViewModels
@model KhachHangViewModel

@{
    ViewData["Title"] = "Create KhachHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container">
    <h2>Tạo thông tin khách hàng</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(true)
        </div>
    }

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label asp-for="TenKhachHang">Tên khách hàng</label>
            <input asp-for="TenKhachHang" class="form-control" />
            <span asp-validation-for="TenKhachHang" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="SoDienThoai">Số điện thoại</label>
            <input asp-for="SoDienThoai" class="form-control" />
            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DiaChi">Địa chỉ</label>
            <input asp-for="DiaChi" class="form-control" />
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="NgaySinh">Ngày sinh</label>
            <input asp-for="NgaySinh" class="form-control" type="date" />
            <span asp-validation-for="NgaySinh" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="GioiTinh">Giới tính</label>
            <select asp-for="GioiTinh" class="form-control">
                <option value="">-- Chọn giới tính --</option>
                <option value="Nam">Nam</option>
                <option value="Nữ">Nữ</option>
            </select>
            <span asp-validation-for="GioiTinh" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Tạo mới</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}